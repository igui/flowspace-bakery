%h3 New Cookie for oven '#{@oven.name}'

= form_for [@oven, @sheet] do |f|
  .row
    .small-8.columns
      = f.label :fillings
  .row
    .small-8.columns
      = f.text_field :fillings, value: ''
      = f.number_field :quantity, min: 1, max: 50, value: 5

  .row
    .small-8.columns
      = f.submit 'Mix and bake', class: 'button'



